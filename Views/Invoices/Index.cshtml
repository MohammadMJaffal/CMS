@model IEnumerable<DMS_3.Models.Invoice>

@{
    ViewData["Title"] = "Index";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" />
    <title>CMS</title>
    <style>
        td, tr, th {
            border: 1px solid black;
            text-align: center;
        }
    </style>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>
<body>


    <div class="container-fluid ">
        <div class="row flex-nowrap">
            <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 " style="background-color: rgba(127, 227, 255, 0.144);">
                <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
                    <a href="/" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                        <span class="fs-5 d-none d-sm-inline text-dark">Clinic</span>
                    </a>
                    <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                        <li>
                            <a href="https://localhost:7238/Secretaries" data-bs-toggle="collapse" class="nav-link px-0 align-middle">
                                <i class="fs-4 bi-speedometer2"></i> <span class="ms-1 d-none d-sm-inline active ">Dashboard</span>
                            </a>
                            <ul class="collapse show nav flex-column ms-1" id="submenu1" data-bs-parent="#menu">
                                <li class="w-100">
                            </ul>
                        </li>
                        <li>
                            <a href="https://localhost:7238/Appointments" class="nav-link px-0 align-middle">
                                <i class="fs-4 bi-table"></i> <span class="ms-1 d-none d-sm-inline">Appointments</span>
                            </a>
                        </li>
                        <li>
                            <a href="#submenu2" data-bs-toggle="collapse" class="nav-link px-0 align-middle">
                                <i class="bi bi-people fs-4"></i> <span class="ms-1 d-none d-sm-inline">Staff List</span>
                            </a>

                        </li>
                        <li>
                            <a href="https://localhost:7238/Patients" data-bs-toggle="collapse" class="nav-link px-0 align-middle">
                                <i class="fs-4 bi bi-person-video2"></i> <span class="ms-1 d-none d-sm-inline">Patients</span>
                            </a>
                        </li>
                        <li>
                            <a href="https://localhost:7238/Invoices" class="nav-link px-0 align-middle">
                                <i class="fs-4 bi bi-graph-up"></i> <span class="ms-1 d-none d-sm-inline">Finance</span>
                            </a>
                        </li>
                    </ul>
                    <hr>
                    <div class="dropdown pb-4">
                        <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="https://github.com/mdo.png" alt="hugenerd" width="30" height="30" class="rounded-circle">
                            <span class="d-none d-sm-inline mx-1 text-dark">Secartary</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-dark text-small shadow">
                            <li><a class="dropdown-item" href="#">Settings</a></li>
                            <li><a class="dropdown-item" href="#">Profile</a></li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" href="#">Sign out</a></li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col py-3">
                <div class="table-responsive">
                    <nav class="navbar bg-body-tertiary">
                        <div class="container-fluid">
                            <form class="d-flex" role="search">
                                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                                <button class="btn btn-outline-success" type="submit">Search</button>
                            </form>
                        </div>
                    </nav>
                    <span position-relative>

                        <i class="bi bi-hourglass-split fs-1"></i>
                        <h1 class="" style="display: inline;">Finance</h1>

                        <span class="dropdown position-absolute end-0 bordar">

                            <button type="button" class="btn btn-primary mb-4" data-bs-toggle="modal" data-bs-target="#appointmentModal"><i class="bi bi-plus"></i>Add Appointment</button>
                            <div class="modal fade" id="appointmentModal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="modalLabel">New Appointment</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <form>
                                                <div class="mb-3">
                                                    <label for="patient-name" class="form-label">Patient Name</label>
                                                    <input type="text" name="patient-name" id="patientName">
                                                </div>
                                                <div class="mb-3">
                                                    <label for="responsibleDoctor">Responsible Doctor</label>
                                                    <button class="btn btn-secondary dropdown-toggle bg-light text-dark mb-4" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                        Doctors
                                                    </button>
                                                    <ul class="dropdown-menu">
                                                        <li><a class="dropdown-item" href="#">Dr 1</a></li>
                                                        <li><a class="dropdown-item" href="#">Dr 2</a></li>
                                                        <li><a class="dropdown-item" href="#">Dr 3</a></li>
                                                    </ul>
                                                </div>
                                                <div class="mb-3">
                                                    <label for="appointmentDate" class="form-label">Date</label>
                                                    <input type="date" class="form-control" id="appointmentDate">
                                                </div>
                                                <div class="mb-3">
                                                    <label for="appointmentTime" class="form-label">Time</label>
                                                    <input type="time" class="form-control" id="appointmentTime">
                                                </div>
                                            </form>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                            <button type="button" class="btn btn-primary">Save Appointment</button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <button class="btn btn-secondary dropdown-toggle bg-light text-dark mb-4" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Doctors
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#">Dr 1</a></li>
                                <li><a class="dropdown-item" href="#">Dr 2</a></li>
                                <li><a class="dropdown-item" href="#">Dr 3</a></li>
                            </ul>
                            <i class="bi bi-calendar3 fs-1 position-absolut end-0"></i>
                        </span>
                    </span>
                    <div class="container">
                        <div class="row">
                            <!-- Patient List Section -->
                            <div class="col-md-4">
                                <h5>Patient List</h5>
                                <div class="btn-group w-100 mb-2" role="group">
                                    <button class="btn btn-dark">All</button>
                                    <button class="btn btn-light">Newest</button>
                                    <button class="btn btn-light">Oldest</button>
                                </div>
                                <div class="mb-2">
                                    <button class="btn btn-outline-secondary w-100">🔍 Filter / Paid</button>
                                </div>
                                <div class="list-group">
                                    <div class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            <strong>Patient</strong><br>
                                            <small>Register at MM/DD/YYYY</small>
                                        </div>
                                        <span class="badge bg-success">Paid $50</span>
                                    </div>
                                    <div class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            <strong>Patient</strong><br>
                                            <small>Register at MM/DD/YYYY</small>
                                        </div>
                                        <span class="badge bg-success">Paid $50</span>
                                    </div>
                                </div>
                            </div>

                            <!-- Payment History Section -->
                            <div class="col-md-8">
                                <h5>Payment History</h5>
                                <div class="card mb-2">
                                    <div class="card-body bg-primary text-white">
                                        <strong>Patient</strong> - Implant<br>
                                        <small>Session 2</small><br>
                                        <small>MM/DD/YYYY HH:MM:SS</small>
                                        <hr>
                                        <p>Pay: <span class="text-warning">$50</span></p>
                                        <p>Remaining: <span class="text-warning">$0</span></p>
                                        <p>Total: <strong>$120</strong></p>
                                    </div>
                                </div>
                                <div class="card mb-2">
                                    <div class="card-body bg-primary text-white">
                                        <strong>Patient</strong> - Implant<br>
                                        <small>Session 1</small><br>
                                        <small>MM/DD/YYYY HH:MM:SS</small>
                                        <hr>
                                        <p>Pay: <span class="text-warning">$70</span></p>
                                        <p>Remaining: <span class="text-warning">$50</span></p>
                                        <p>Total: <strong>$120</strong></p>
                                    </div>
                                </div>
                                <div class="card mb-2">
                                    <div class="card-body bg-success text-white">
                                        <strong>Finance</strong> - Summary<br>
                                        <small>Overall Transactions</small><br>
                                        <small>MM/DD/YYYY HH:MM:SS</small>
                                        <hr>
                                        <p>Total Collected: <span class="text-warning">$500</span></p>
                                        <p>Pending Payments: <span class="text-warning">$200</span></p>
                                        <p>Grand Total: <strong>$700</strong></p>
                                    </div>
                                </div>
                                <div class="text-center mt-3">
                                    <button class="btn btn-success btn-lg">Paid</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function showPatientInfo() {
            document.getElementById("patient-info").classList.remove("d-none");
        }
    </script>
</body>
</html>
