@model DMS_3.Models.Invoice
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Situation Report</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>
<body class="p-3">
    <div class="container-fluid">
        <div class="row">
            <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-light min-vh-100">
                <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2">
                    <a href="#" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-decoration-none">
                        <span class="fs-5 d-none d-sm-inline text-dark">Clinic</span>
                    </a>
                    <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start">
                        <li>
                            <a href="https://localhost:7238/Doctors/DoctorHome" class="nav-link px-0 align-middle">
                                <i class="fs-4 bi-speedometer2"></i> <span class="ms-1 d-none d-sm-inline">Dashboard</span>
                            </a>
                        </li>
                        <li>
                            <a href="https://localhost:7238/Doctors/DoctorAppointment" class="nav-link px-0 align-middle">
                                <i class="fs-4 bi-table"></i> <span class="ms-1 d-none d-sm-inline">My Appointments</span>
                            </a>
                        </li>
                        <li>
                            <a href="https://localhost:7238/Doctors/Patients" class="nav-link px-0 align-middle">
                                <i class="bi bi-people fs-4"></i> <span class="ms-1 d-none d-sm-inline">Patients</span>
                            </a>
                        </li>
                    </ul>
                    <hr>
                    <div class="dropdown pb-4">
                        <a href="#" class="d-flex align-items-center text-dark text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="https://github.com/mdo.png" alt="hugenerd" width="30" height="30" class="rounded-circle">
                            <span class="d-none d-sm-inline mx-1 text-dark">Doctor</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-dark text-small shadow text-dark">
                            <li><a class="dropdown-item" href="#">Settings</a></li>
                            <li><a class="dropdown-item" href="#">Profile</a></li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" href="https://localhost:7238">Sign out</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col py-3">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4>Situation Report:</h4>
                    <button class="btn btn-danger">End Session</button>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-2 p-2 bg-light rounded">Last Treatment: <strong>Implant</strong></div>
                        <div class="mb-2 p-2 bg-light rounded">Report Date: MM/DD/YYYY</div>
                        <div class="mb-2 p-2 bg-light rounded">Written by: Dr.1</div>
                        <div class="mb-2 p-2 bg-light rounded">Results:</div>
                        <div class="mb-2">
                            <label for="doctorSwitch" class="form-label">Switch to:</label>
                            <select id="doctorSwitch" class="form-select">
                                <option>Dr.2</option>
                            </select>
                        </div>
                        <div class="mb-2">
                            <h6>Next Session:</h6>
                            <input type="date" class="form-control">
                            <label class="form-label mt-2">Ends</label>
                            <input type="time" class="form-control">
                        </div>
                        <div class="mb-2 p-2 bg-light rounded">Note:<input type="text" name="name" value="" /></div>
                    </div>
                    <div class="col-md-6">
                        <h5>Diagnostic Scan:</h5>
                        <div class="bg-light p-5 rounded text-center">
                            <span>📷 +</span>
                        </div>
                        <h5 class="mt-3">Payment Info:</h5>
                        <div class="bg-light p-3 rounded">
                            <div class="mb-2">Primary fees: <input type="number" asp-for="PrimaryFees"></</div>
                            <div class="mb-2">Additional fees: <input type="number" asp-for="AdditionalFees"></div>
                            <div class="mb-2">Discount rate: <input type="number" asp-for="Discount"></div>
                            <div class="mb-2">Total: <input type="number" asp-for="Total"></div>
                        </div>
                        <div class="mb-2 p-2 bg-light rounded"><input type="text" name="note" value="" /> Note:</div>
                    </div>
                </div>

                <h5 class="mt-4">Patient List</h5>
                <div class="list-group">
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        Patient <span class="badge bg-success">Paid</span> <span>JD50</span>
                    </div>
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        Patient <span class="badge bg-success">Paid</span> <span>JD50</span>
                    </div>
                </div>

                <h5 class="mt-4">Payment History</h5>
                <div class="card p-3 mb-2">
                    <h6>Patient</h6>
                    <p>Implant - Session 2</p>
                    <p>Pay: <span class="text-success">50JD</span></p>
                    <p>Remaining from total: <span class="text-danger">$0</span></p>
                    <p>Total: $120</p>
                </div>
                <div class="card p-3">
                    <h6>Patient</h6>
                    <p>Implant - Session 1</p>
                    <p>Pay: <span class="text-success">70JD</span></p>
                    <p>Remaining from total: <span class="text-danger">$50</span></p>
                    <p>Total: $120</p>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
